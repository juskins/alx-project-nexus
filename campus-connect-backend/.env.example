# Server Configuration
PORT=5000
NODE_ENV=development

# Database - MongoDB Atlas
# Get this from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campus-connect?retryWrites=true&w=majority

# JWT Configuration
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# Cloudinary Configuration (Image Uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Gmail)
# Use Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=Campus Connect <noreply@campusconnect.com>

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://your-app-name.netlify.app
FRONTEND_URL=http://localhost:3000
